/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run genomic-medicine-sweden/taco -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

process {
    executor                    = 'slurm'
    queue                       = 'low'
}

params {
    config_profile_name         = 'cmd profile'
    config_profile_description  = 'CMD High performance profile'

    // Databases
    db                          = '/fs1/pipelines/taco-dev/assets/databases/emu_database'

    // Limit resources so that this can run on GitHub Actions
    max_cpus                    = 60
    max_memory                  = '300.GB'
    max_time                    = '48.h'

    // Reads
    save_merged_reads           = false

    // Boilerplate
    publish_dir_overwrite       = true
}

singularity{
	enabled = true
	runOptions = '--bind /fs1/ --bind /fs2/ --bind /local/ --bind /mnt/beegfs/'
	cacheDir = "/fs1/resources/containers/"
}
